me="$0"

usage () {
	echo "Usage: $me [OPTIONS]"	2>&1
	echo "Options:"			2>&1
	echo "	[--version]"		2>&1
	echo "	[--libs]"		2>&1
	echo "	[--cflags]"		2>&1

	exit 1
}

case $# in
  0)	usage	;;
  *)	;;
esac

while [ "$#" -gt 0 ]
do
	case ".$1" in
	.--version)	echo "%GEOLIB_VERSION_STRING%"
			;;
	.--libs)	echo "%GEOSTEINER_CLIENT_LIBRARY_ARGS%"
			;;
	.--cflags)	echo "%GEOSTEINER_CLIENT_CFLAGS%"
			;;
	*)		usage
			;;
	esac
	shift
done
